# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/google_ads_manager
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/google_ads_manager_test

# Google Ads API Configuration
# Get these from Google Ads API Console
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=your-client-secret
GOOGLE_ADS_REFRESH_TOKEN=your-refresh-token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=1234567890
GOOGLE_ADS_CUSTOMER_ID=0987654321

# Optional: Path to google-ads.yaml config file
# GOOGLE_ADS_CONFIG_PATH=google-ads.yaml

# Server Configuration
PORT=5000
